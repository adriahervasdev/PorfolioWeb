---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import Link from "@components/Link.astro";
import "@/styles/article.css";
import { useTranslations} from '@i18n/utils/utils.ts';

const lau = Astro.url.pathname.includes('/en/') ? 'en' : 'es';
const t = useTranslations(lau);

export async function getStaticPaths() {
    const posts = (await getCollection(`posts`))
    .filter(post => post.id.startsWith("es"));

  return posts.map(post => {
    const [lang, ...slug] = post.slug.split('/');

    return {
      params: { lang, slug: slug.join('/') },
      props: post,
    };
  });
}

const { lang, slug } = Astro.params;
const page = Astro.props;

const { Content } = await page.render();
---

<PageLayout title={page.data.title} description={page.data.description}>
  <Container>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-md">
          <FormattedDate date={page.data.date} />
        </div>
      </div>
      <div class="animate text-4xl InterTitle text-accent">
        {page.data.title}
      </div>
      <div class="flex items-center space-x-1 text-lg">
        {page.data.logoauthor && (
          <img src={page.data.logoauthor} alt="Company Logo" class="animate h-4 w-auto" />
        )}
        <span class="animate text-accent">{page.data.author}</span>
      </div>
      {(page.data.projectURL) && (
        <nav class="animate flex gap-1 text-sm">
          {page.data.projectURL && (
            <Link href={page.data.projectURL} external>
              <div class="text-base">{page.data.projectURL}</div>
            </Link>
          )}
        </nav>
      )}
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>
