---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";

import { useTranslations, getUpdateURL } from "@i18n/utils/utils.ts";

const lang = Astro.url.pathname.includes("/en/") ? "en" : "es";
const t = useTranslations(lang);
const oppositeLang = lang === "es" ? "en" : "es";
const OppositeUrl = getUpdateURL(Astro.url, lang, oppositeLang);
---

<header class="no-print">
    <Container>
        <div class="flex flex-wrap justify-between">
            <Link href=`/${lang}/` underline={false}>
                <div class="Inter">
                
                    <img
                        src={"/LogoAdriaHervas.png"}
                        alt="Logo Picture"
                        class="w-8 h-8 object-cover"
                    />
                </div>
            </Link>
            <nav class="flex gap-3 items-center">
                <Link href={`/posts/${lang}/1`}> Blog </Link>
                <Link href={`/aboutme/${lang}/`}> {t("nav.aboutme")} </Link>
                
                <span>
                    {`|`}
                </span>
                
                <Link
                    href={`${OppositeUrl}`}
                    underline={false}
                    aria-label={oppositeLang === "es"
                        ? "Cambiar a EspaÃ±ol"
                        : "Switch to English"}
                >
                    {`${lang}`}
                </Link>
            </nav>
        </div>
    </Container>
</header>
