---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";

import { useTranslations, getUpdateURL} from '@i18n/utils/utils.ts';

const lang = Astro.url.pathname.includes('/en/') ? 'en' : 'es';
const t = useTranslations(lang);
const oppositeLang = lang === 'es' ? 'en' : 'es';
const OppositeUrl = getUpdateURL(Astro.url, lang, oppositeLang);
const flagSvg = lang === 'en' ? '../../../flag-eeuu.svg' : '../../../flag-spain.svg'; 
---

<header class="no-print">
    <Container>
        <div class="flex flex-wrap gap-y-2 justify-between">
            <Link href=`/${lang}/` underline={false}>
                <div class="font-semibold">
                    {SITE.NAME}
                </div>
            </Link>
            <nav class="flex gap-1 items-center">
                <Link href={`/projects/${lang}/`}> {t('nav.projects')} </Link>
                <span>
                    {`|`}
                </span>
                <button
                    id="light-theme-button"
                    aria-label="Light theme"
                    class="group size-5 flex items-center justify-center rounded-full"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="group-hover:stroke-black group-hover:dark:stroke-white transition-colors duration-300 ease-in-out"
                    >
                        <circle cx="12" cy="12" r="5"></circle>
                        <line x1="12" y1="1" x2="12" y2="3"></line>
                        <line x1="12" y1="21" x2="12" y2="23"></line>
                        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                        <line x1="1" y1="12" x2="3" y2="12"></line>
                        <line x1="21" y1="12" x2="23" y2="12"></line>
                        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                    </svg>
                </button>
                <button
                    id="dark-theme-button"
                    aria-label="Dark theme"
                    class="group size-5 flex items-center justify-center rounded-full"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="group-hover:stroke-black group-hover:dark:stroke-white transition-colors duration-300 ease-in-out"
                    >
                        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                    </svg>
                </button>
                <Link href={`${OppositeUrl}`} underline={false} aria-label={oppositeLang === 'es' ? 'Cambiar a Español' : 'Switch to English'}>
                    <img src={flagSvg} alt={oppositeLang === 'es' ? 'Switch to English' : 'Cambiar a Español'} class="w-4 h-4 sm-3"/>
                </Link>
            </nav>
        </div>
    </Container>
</header>