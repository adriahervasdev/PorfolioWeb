---
const { prevPage, currentPage, totalPages, nextPage } = Astro.props;
---

<section>
  <nav class="flex justify-between items-center mt-8 text-sm sm:text-lg">
    {/* Botón Página Anterior */}
    {
      prevPage && (
        <a href={prevPage} class="no-print relative group w-fit flex pl-9 pr-3 py-1.5 flex-nowrap rounded border border-accent/15  hover:bg-accent/5  hover:text-accent transition-colors duration-300 ease-in-out">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="absolute top-1/2 left-2 -translate-y-1/2 size-5 stroke-2 fill-none stroke-current"
          >
            <line
              x1="5"
              y1="12"
              x2="19"
              y2="12"
              class="translate-x-2 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out"
            />
            <polyline
              points="12 5 5 12 12 19"
              class="translate-x-1 group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
            />
          </svg>
          Anterior
        </a>
      )
    }
    {
      !prevPage && (
        <span class="px-4 py-2 text-accent/45">
          &larr;
          Anterior
        </span>
      )
    }

    {/* Indicador de Página Actual */}
    <span class="text-sm sm:text-lg text-accent">
      Página {currentPage} de {totalPages}
    </span>

    {/* Botón Página Siguiente */}
    {
      nextPage && (
        <a href={nextPage} class="no-print relative group w-fit flex pl-3 pr-9 py-1.5 flex-nowrap rounded border border-accent/15  hover:bg-accent/5  hover:text-accent transition-colors duration-300 ease-in-out">
          Siguiente 
          <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    class="absolute top-1/2 right-2 -translate-y-1/2 size-5 stroke-2 fill-none stroke-current sm:block"
  >
    <line
      x1="5"
      y1="12"
      x2="19"
      y2="12"
      class="translate-x-3 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out"
    ></line>
    <polyline
      points="12 5 19 12 12 19"
      class="-translate-x-1 group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
    ></polyline>
  </svg>
        </a>
      )
    }
    {
      !nextPage && (
        <span class="px-4 py-2 text-accent/45 rounded-lg cursor-not-allowed opacity-50">
          Siguiente &rarr;
        </span>
      )
    }
  </nav>
</section>
