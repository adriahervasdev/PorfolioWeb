---
import { cn } from "@lib/utils";
import LinkRedirection from "@components/LinkRedirection.tsx";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  textsize?: string;
  paddingBottom?: string;
}

const { href, external, underline = true, textsize="text-xl", paddingBottom="pb-1", ...rest } = Astro.props;
---
<LinkRedirection client:load href={`${href}`} underline={false} textsize={`${textsize}`}>
  <slot/>
</LinkRedirection>
